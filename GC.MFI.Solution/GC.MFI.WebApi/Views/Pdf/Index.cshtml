@using SavingLedger = GC.MFI.Models.Models.SavingLedger
@model IList<SavingLedger>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
	<title>Savings Ledger</title>
	
	<style>
		table, th, td {
			border: 1px solid black;
		}
	</style>
</head>
<body>
    <div id="OfficeInfo">
		<div class='row'>
      <div class='col-md-12 text-center'>
        <h6>Office:
          @Model[0].OfficeCode
          ,
          @Model[0].OfficeName
        </h6>
        <p>Savings Ledger</p>
      </div>
          </div>
          <hr />
          <div class='row'>
            <div class='col-md-6'>
              <div class='row'>
                Samity Code: @Model[0].CenterCode
              </div>
              <div class='row'>
                Samity Name:@Model[0].CenterName
              </div>
              <div class='row'>
                Product Code: @Model[0].ProductCode
              </div>
              <div class='row'>
                Product Name: @Model[0].ProductName
              </div>
            </div>
            <div class='col-md-6'>
              <div class='row'>
                Member Name: @Model[0].MemberName
              </div>
              <div class='row'>
                Member Code: @Model[0].MemberCode
              </div>
              <div class='row'>
                Member ID: @Model[0].MemberID
              </div>
              <div class='row'>
                No of Account: @Model[0].NoOfAccount
              </div>
            </div>
          </div>
          <hr />
          <br/>
    <br/>
	
	
    <div>
      <table>
        <thead>
        <tr>
          <th>#</th>
          <th>Trans. Date</th>
          <th>Trx. ID</th>
          <th>Deposit</th>
          <th>Withdrawal</th>
          <th>Penalty</th>
          <th>Monthly Interest</th>
          <th>Running Balance</th>
          <th>Balance</th>
          <th>Tr. Withdrawal</th>
          <th>Tr. personal Savings</th>
          <th>Employee</th>
        </tr>
        </thead>
        <tbody id="reportBody">
     @foreach (var savingLedger in Model)
     {
       <tr>
         <td>@savingLedger.SLNo</td>
         <td>@savingLedger.TransactionDate.ToString("dd-MM-yyyy")</td>
         <td>@savingLedger.SavingTrxID</td>
         <td>@savingLedger.Deposit</td>
         <td>@savingLedger.Withdrawal</td>
         <td>@savingLedger.Penalty</td>
         <td>@savingLedger.MonthlyInterest</td>
         <td>@savingLedger.RunningBalance</td>
         <td>@savingLedger.Balance</td>
         <td>@savingLedger.TRWithdrawal</td>
         <td>@savingLedger.TRPersonalSavings</td>
         <td>@savingLedger.EmpName</td>
       </tr>
     }
        </tbody>
      </table>
    </div>
    </div>
</body>
</html>